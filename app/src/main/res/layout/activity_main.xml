<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="kr.hs.emirim.gjy00727.friend_simulator.MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="40sp"
        android:text="김효린 시뮬레이터" />

    <Button
        android:id="@+id/button01"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="잠올때"    />

    <Button
        android:id="@+id/button02"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="놀릴때"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/button01"
       />

    <Button
        android:id="@+id/button03"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="장난칠때"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/button02"
        @+id/button02"/>

    <Button
        android:id="@+id/button04"
        android:layout_width="368dp"
        android:layout_height="54dp"
        android:text="놀릴때"
        tools:layout_editor_absoluteX="8dp"
        app:layout_constraintTop_toBottomOf="@+id/button03"
        android:layout_marginTop="277dp" />

    <Button
        android:id="@+id/button05"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:text="장난칠때"
        tools:layout_editor_absoluteX="8dp"
        app:layout_constraintTop_toBottomOf="@+id/button04"
        android:layout_marginTop="277dp" />

</LinearLayout>
